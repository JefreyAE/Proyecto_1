@{
    ViewData["Title"] = "Síntomas";
}

<h1>Registro de síntomas</h1>

<h4>¿Desde la inyección de COVID, ha tenido alguno de los siguientes
síntomas?</h4>
<hr />

@{
    List<Symptoms> symptomsList = ViewBag.Symptoms;
}
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label class="control-label">¿Desde la inyección de COVID, ha tenido alguno de los siguientes
síntomas? (marque todas las que
correspondan):</label>
            <br />
            @foreach(var item in symptomsList){
                <div class="form-group">
                    <input type="checkbox" name="adv-@item.id" value="@item.id">
                    <label for="adv-@item.id">@item.description</label><br>
                </div>
            }
            <br />
            <div class="form-group">
                <input type="submit" value="Registrar y continuar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}