@{
    ViewData["Title"] = "Enfermedades";
}

<h1>Registro de nuevas enfermedades</h1>

<h4>Nuevas enfermedades desde su inyección de COVID (marque todas las que
correspondan):</h4>
<hr />

@{
    List<NewDiseases> newDiseasesList = ViewBag.NewDiseases;
}
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label class="control-label">Nuevas enfermedades desde su inyección de COVID (marque todas las que
correspondan):</label>
            <br />
            @foreach(var item in newDiseasesList){
                <div class="form-group">
                    <input type="checkbox" name="adv-@item.id" value="@item.id">
                    <label for="adv-@item.id">@item.description</label><br>
                </div>
            }
            <br />
            <div class="form-group">
                <input type="submit" value="Registrar y continuar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}