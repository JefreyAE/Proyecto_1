@model Proyecto1V1.Models.Clinics

@{
    ViewData["Title"] = "Registro de la clínica";
}

<h1>Registro de las clinicas</h1>

<h4>Registre la clínica en la cual se atiende el paciente:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="clinic_form" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" class="form-control" />
            <div class="form-group">
                <label asp-for="name" class="control-label">Nombre</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="legal_certificate" class="control-label">Cédula jurídica</label>
                <input asp-for="legal_certificate" class="form-control" />
                <span asp-validation-for="legal_certificate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="country" class="control-label">País</label>
                <input asp-for="country" class="form-control" />
                <span asp-validation-for="country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="province" class="control-label">Provincia</label>
                <input asp-for="province" class="form-control" />
                <span asp-validation-for="province" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="canton" class="control-label">Cantón</label>
                <input asp-for="canton" class="form-control" />
                <span asp-validation-for="canton" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="district" class="control-label">Distrito</label>
                <input asp-for="district" class="form-control" />
                <span asp-validation-for="district" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone_number" class="control-label">Teléfono de la administración</label>
                <input asp-for="phone_number" class="form-control" />
                <span asp-validation-for="phone_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Correo de la administración</label>
                <input type="email" asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="web_site" class="control-label">Sitio web de la clínica</label>
                <input value="https://" title="Incluye https://" asp-for="web_site" class="form-control" pattern="http(s?)(:\/\/)((www.)?)([a-zA-z0-9\-_]+)(.com)"/>
                <span asp-validation-for="web_site" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" id="btn_clinic" name="submit1" value="Guardar clínica" class="btn btn-primary" />
            </div>
        </form>
        <br />
         <form asp-action="Create">
             <input type="submit" name="submit2" class="btn btn-success"  value="Saltar Registro"/>
         </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
